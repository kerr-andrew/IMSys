<Window x:Class="IMSys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMSys"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <local:CategoryConverter x:Key="CategoryConverterKey" />
    </Window.Resources>
    
    <Grid x:Name="MainGrid">
        <Menu  VerticalAlignment="Top">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="Inventory">
                <MenuItem x:Name="addItem" Header="Add Item" HorizontalAlignment="Left" Click="AddItemClick"/>
                <MenuItem x:Name="deleteItem" Header="Delete Item" Height="{Binding Path=Height, RelativeSource={RelativeSource AncestorType=Menu}}" Margin="0" Click="DeleteItemClick"/>
                <MenuItem x:Name="manageCategories" Header="Manage Categories" Height="{Binding Path=Height, RelativeSource={RelativeSource AncestorType=Menu}}" Margin="0" Click="ManageCategoriesClick"/>
            </MenuItem>
            <MenuItem HorizontalAlignment="Right" Margin="0" Padding="0">
                <MenuItem.Header>
                    <TextBox x:Name="searchFilter" Text="{Binding Path=SearchText, FallbackValue=Search}" Width="160" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" GotFocus="TextBoxFocus" TextChanged="TextBoxSearch"/>
                </MenuItem.Header>
            </MenuItem>
        </Menu>
        <DataGrid x:Name="Inventory" ItemsSource="{Binding Items}"  CellEditEnding="Inventory_CellEditEnding" Margin="0,24,0,0" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Price" Binding="{Binding Price, ValidatesOnExceptions=True, StringFormat=0.00}" />
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity, ValidatesOnExceptions=True}" />
                <DataGridTextColumn Header="Unit" Binding="{Binding Unit, ValidatesOnExceptions=True}" />
                <DataGridTextColumn Header="Value" Binding="{Binding Value, ValidatesOnExceptions=True}" IsReadOnly="True" />
                <DataGridComboBoxColumn Header="Category" SelectedValueBinding="{Binding Category}"
                                        DisplayMemberPath="Name"
                                        SelectedValuePath="Id"
                                        SelectedItemBinding="{Binding Path=Category, Converter={StaticResource CategoryConverterKey}}">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="{x:Type ComboBox}">
                            <Setter Property="ItemsSource" Value="{Binding Path=DataContext.Categories, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                            <EventSetter Event="SelectionChanged" Handler="ComboBox_SelectionChanged" />
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="{x:Type ComboBox}">
                            <Setter Property="ItemsSource" Value="{Binding Path=DataContext.Categories, Mode=TwoWay,RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                            <EventSetter Event="SelectionChanged" Handler="ComboBox_SelectionChanged" />
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
