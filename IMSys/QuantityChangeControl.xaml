<UserControl x:Class="IMSys.QuantityChangeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IMSys"
             xmlns:mp="clr-namespace:IMSys.Properties"
             mc:Ignorable="d" 
             Height="54" Width="128">
    <Grid>
        <RadioButton x:Name="inputAbsBtn" Height="24" Width="24" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Image Source="pack://application:,,,/Resources/equal.png" />
        </RadioButton>
        <Button x:Name="inputChgBtn" Height="24" Width="24" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Image Source="pack://application:,,,/Resources/plusmin.png" />
        </Button>
    </Grid>
</UserControl>
