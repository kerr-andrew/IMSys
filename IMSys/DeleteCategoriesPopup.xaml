<Window x:Class="IMSys.DeleteCategoriesPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMSys"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="DeleteCategoriesPopup" Height="250" Width="350">
    <Grid Background="#FFA00000">
        <ComboBox x:Name="cbxReplacement" HorizontalAlignment="Center" Margin="111,103,111,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="Name" SelectedIndex="0" ItemsSource="{Binding Path=UpdatedCategoryList, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
        <Label Content="Warning Deleteing a Category cannot be undone!" HorizontalAlignment="Center"  Margin="0,5,0,0" VerticalAlignment="Top" Background="#FFA00000"/>
        <TextBlock HorizontalAlignment="Center" TextAlignment="Center" Margin="18,45,9,0" VerticalAlignment="Top" Background="#FFA00000" Height="35" TextWrapping="Wrap" RenderTransformOrigin="0.5,0.5" Width="315">
                Please select a new category for the items that belong the one you are deleting.
        </TextBlock>
        <Button Content="OK" HorizontalAlignment="Center" Margin="146,0,146,31" VerticalAlignment="Bottom" Width="50" Click="RemoveCategoryClick"/>


    </Grid>
</Window>
