<Window x:Class="IMSys.AddNewCategoriesPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMSys"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="AddNewCategoriesPopup" Height="150" Width="220">
    <Grid>
        <Label Content="Enter the Name of the Category" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0" />
        <TextBox x:Name="txtCategoryName" Text="Name" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        <Button x:Name="btnAddCategory" Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="50" Margin="0,0,0,10" Click="AddNewCategoryEvent" GotFocus="NewCategoryGotFocusEvent"/>
    </Grid>
</Window>
